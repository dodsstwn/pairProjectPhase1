<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | Tanaman Is Plant</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <h2>Sinau.id Login Form for Student</h2><br>
  <div class="container" id="container">
    <div class="form-container sign-up-container">
      <form action="/addStudent" method="POST">
        <h1>Create Account</h1>
        <br>
        <input type="text" placeholder="Name" name="createname"/>
        <input type="text" placeholder="Username" name="createusername"/>
        <input type="email" placeholder="Email" name="createemail"/>
        <input type="password" placeholder="Password" name="createpassword"/>
        <button type="submit">Sign Up</button>
      </form>
    </div>
    <div class="form-container sign-in-container">
      <form action="/checkLoginStudent" method="POST">
        <h1>Sign in</h1>
        <br>
        <input type="text" placeholder="Email" name="email"/>
        <input type="password" placeholder="Password" name="password"/>
        <a href="#">Forgot your password?</a>
        <button type="submit">Sign In</button>
      </form>
    </div>
    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1>Welcome Back!</h1>
          <p>To keep connected with us please login with your personal info</p>
          <button class="ghost" id="signIn">Sign In</button>
        </div>
        <div class="overlay-panel overlay-right">
          <h1>Hello, Sobat!</h1>
          <p>Don't have an account yet? Enter your personal details and start course with us</p>
          <button class="ghost" id="signUp">Sign Up</button>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <p>
      Copyright <i class="fa fa-heart"></i>
      <a target="_blank" href="https://www.instagram.com/dodsstwn/">Dodsstwn and Adivigo</a>
    </p>
  </footer>
  <script>
    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const container = document.getElementById('container');

    signUpButton.addEventListener('click', () => {
      container.classList.add("right-panel-active");
    });

    signInButton.addEventListener('click', () => {
      container.classList.remove("right-panel-active");
    });
  </script>
</body>
</html>